datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  lastName  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profileId Int      @unique
  profile   Profile?
}

model Profile {
  id             Int       @id @default(autoincrement())
  userId         Int       @unique
  specialty      String?
  phoneNumber    String?
  dateOfBirth    DateTime?
  medicalHistory String?
  user           User      @relation(fields: [userId], references: [id])
}

enum UserRole {
  PROFESSIONAL
  PATIENT
}
